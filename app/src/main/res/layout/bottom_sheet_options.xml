<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/resourcesBTN"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_resources"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Resources"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintEnd_toEndOf="@+id/resourcesBTN"
                    app:layout_constraintStart_toStartOf="@+id/resourcesBTN"
                    app:layout_constraintTop_toBottomOf="@+id/resourcesBTN" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <ImageView
                    android:id="@+id/flagshipBTN"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flagship"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Flagship \nevents"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintEnd_toEndOf="@+id/flagshipBTN"
                    app:layout_constraintStart_toStartOf="@+id/flagshipBTN"
                    app:layout_constraintTop_toBottomOf="@+id/flagshipBTN" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <ImageView
                    android:id="@+id/projectsBTN"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flagship"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Projects"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintEnd_toEndOf="@+id/projectsBTN"
                    app:layout_constraintStart_toStartOf="@+id/projectsBTN"
                    app:layout_constraintTop_toBottomOf="@+id/projectsBTN" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp">

                <ImageView
                    android:id="@+id/aboutBTN"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_about"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="About Us"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins"
                    app:layout_constraintEnd_toEndOf="@+id/aboutBTN"
                    app:layout_constraintStart_toStartOf="@+id/aboutBTN"
                    app:layout_constraintTop_toBottomOf="@+id/aboutBTN" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/poppins"
            android:text="Follow us on"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <ImageView
                android:id="@+id/instagramBTN"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_instagram"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/facebookBTN"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_facebook"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/githubBTN"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_github"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/linkedinBTN"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_linkedin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/youtubeBTN"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_youtube"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>